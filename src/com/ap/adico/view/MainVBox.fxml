<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ap.adico.view.MainVBoxController">
    <children>
        <ImageView fx:id="image" fitHeight="250.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true" />
        <Label fx:id="lb_titre1" text="Label">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
        <HBox fx:id="hbox" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0" />
        <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
            <children>
                <Button fx:id="bt_prev" maxWidth="75.0" minWidth="75.0" mnemonicParsing="false" onAction="#prev" prefWidth="75.0" text="Précédent" />
                <Button fx:id="bt_next" maxWidth="75.0" minWidth="75.0" mnemonicParsing="false" onAction="#next" prefWidth="75.0" text="Suivant" />
            </children>
        </HBox>
    </children>
   <padding>
      <Insets left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
